@model ST10443998_CLDV6211_POE.Models.Venue

@{
    ViewData["Title"] = "Venue Details";
}

<h2>Venue Details</h2>

<div class="card p-3 shadow">
    <dl class="row">
        <dt class="col-sm-3">Venue ID</dt>
        <dd class="col-sm-9">@Model.VenueId</dd>

        <dt class="col-sm-3">Venue Name</dt>
        <dd class="col-sm-9">@Model.VenueName</dd>

        <dt class="col-sm-3">Location</dt>
        <dd class="col-sm-9">@Model.Location</dd>

        <dt class="col-sm-3">Capacity</dt>
        <dd class="col-sm-9">@Model.Capacity</dd>

        <dt class="col-sm-3">Image</dt>
        <dd class="col-sm-9">
            <img src="@Model.ImageUrl" alt="Venue Image" width="250" />
        </dd>
    </dl>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.VenueId" class="btn btn-warning">Edit</a>
        <a asp-action="Delete" asp-route-id="@Model.VenueId" class="btn btn-danger">Delete</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
