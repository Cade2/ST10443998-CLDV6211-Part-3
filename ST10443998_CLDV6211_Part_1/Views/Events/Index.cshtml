@model IEnumerable<ST10443998_CLDV6211_POE.Models.Event>

<h2>Events</h2>
<a class="btn btn-primary" asp-controller="Booking" asp-action="Customer">Add A New Event</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Date</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.EventName</td>
                <td>@item.EventDate.ToShortDateString()</td>
                <td>@item.Description</td>
                <td>
                    <a asp-controller="Booking" asp-action="Edit" asp-route-id="@item.EventId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-controller="Booking" asp-action="Delete" asp-route-id="@item.EventId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
