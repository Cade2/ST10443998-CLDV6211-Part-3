@model ST10443998_CLDV6211_POE.Models.Booking

@if (TempData["WarningMessage"] != null)
{
    <div class="alert alert-warning">@TempData["WarningMessage"]</div>
}


<h2>Confirm Delete</h2>
<p>Are you sure you want to delete this booking?</p>

<hr />
<p><strong>Booking ID:</strong> @Model.BookingId</p>
<p><strong>Customer:</strong> @Model.Customer?.FullName</p>
<p><strong>Event:</strong> @Model.Event?.EventName</p>
<p><strong>Venue:</strong> @Model.Event?.Venue?.VenueName</p>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="BookingId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
